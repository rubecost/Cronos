<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:contentview="clr-namespace:Cronos.ContentViews"
             xmlns:cursores="clr-namespace:Cronos.Platforms.Windows"
             xmlns:viewmodel="clr-namespace:Cronos.ViewModels"
             x:Class="Cronos.Views.ConfiguracaoPage">

    <ContentPage.BindingContext>
        <viewmodel:ConfiguracaoViewModel />
    </ContentPage.BindingContext>
    <Frame Padding="0"
           CornerRadius="0"
           BackgroundColor="Transparent"
           BorderColor="#4B4B4B">
        <Grid ColumnDefinitions="*"
              RowDefinitions="auto,*"
              ColumnSpacing="20"
              RowSpacing="0">
            <!-- MENU SUPERIOR -->
            <ContentView Grid.Row="0">
                <contentview:MenuTopContentView />
            </ContentView>

            <Grid Grid.Row="1">
                <ScrollView >
                    <StackLayout Margin="20">
                        <Grid ColumnDefinitions="*,*,*,*"
                              ColumnSpacing="20">
                            <StackLayout Grid.Column="0">
                                <Label Text="Configurações"
                                       FontSize="18"
                                       FontFamily="PoppinsSemiBold"
                                       TextColor="White"
                                       HorizontalTextAlignment="Start"
                                       SemanticProperties.HeadingLevel="Level1" />
                                <Label Text="Configurações"
                                       FontSize="9"
                                       TextColor="#8A8A8A"
                                       FontFamily="PoppinsLight"
                                       HorizontalTextAlignment="Start" />
                            </StackLayout>
                            <!-- Button Exibir: Gerenciar Perfil Pessoal -->
                            <Label Grid.Column="1"
                                   x:Name="TxtPessoal"
                                   Text="Gerenciar Perfil Pessoal"
                                   FontFamily="PoppinsRegular"
                                   FontSize="13"
                                   TextColor="White"
                                   Margin="0,20,0,0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   cursores:CursorBehavior.Cursor="Hand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Pessoal_Tapped"
                                                          Command="{Binding Btn_ExecutarEdicao}"
                                                          CommandParameter="EditarUsuario"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <!-- Button Exibir:  Gerenciar Perfil da Empresa -->
                            <Label Grid.Column="2"
                                   x:Name="TxtEmpresa"
                                   Text="Gerenciar Perfil da Empresa"
                                   FontFamily="PoppinsRegular"
                                   FontSize="13"
                                   TextColor="#8A8A8A"
                                   Margin="0,20,0,0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   cursores:CursorBehavior.Cursor="Hand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Empresa_Tapped"
                                                          Command="{Binding Btn_ExecutarEdicao}"
                                                          CommandParameter="EditarEmpresa" />
                                </Label.GestureRecognizers>
                            </Label>
                            <!-- Button Exibir: Gerenciar Notificações -->
                            <Label Grid.Column="3"
                                   x:Name="TxtNotificacao"
                                   Text="Gerenciar Notificações por E-Mail"
                                   FontFamily="PoppinsRegular"
                                   FontSize="13"
                                   TextColor="#8A8A8A"
                                   Margin="0,20,0,0"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   cursores:CursorBehavior.Cursor="Hand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Notificacao_Tapped"
                                                          Command="{Binding Btn_ExecutarEdicao}"
                                                          CommandParameter="EditarEmailsNoficacao" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>

                        <!-- GERENCIAR PERFIL PESSOAL -->
                        <!-- Pai -->
                        <Frame x:Name="FrmPessoal"
                               Padding="0"
                               CornerRadius="2"
                               BackgroundColor="#252525"
                               BorderColor="Transparent"
                               Margin="0,10,0,0">
                            <!-- 2 Colunas -->
                            <Grid ColumnDefinitions="*,*"
                                  ColumnSpacing="20">
                                <!-- Filho 1 -->
                                <Frame Grid.Column="0"
                                       BackgroundColor="#1F1F1F"
                                       Padding="20"
                                       BorderColor="Transparent"
                                       CornerRadius="2"
                                       Margin="10,10,0,10">
                                    <Grid RowDefinitions="auto,auto"
                                          ColumnDefinitions="auto,*"
                                          RowSpacing="20"
                                          ColumnSpacing="20">
                                        <Label Grid.Row="0"
                                               Grid.ColumnSpan="3"
                                               Text="Gerenciar Perfil Pessoal"
                                               FontFamily="PoppinsSemiBold"
                                               FontSize="15"
                                               TextColor="White" />
                                        <Frame Grid.Row="1"
                                               Grid.Column="0"
                                               Padding="0"
                                               CornerRadius="5"
                                               HeightRequest="125"
                                               WidthRequest="125"
                                               BackgroundColor="#8E8E8E"
                                               BorderColor="#8E8E8E"
                                               IsClippedToBounds="True">
                                            <Grid>
                                                <Label Text="&#xe93a;"
                                                       FontSize="100"
                                                       FontFamily="icons"
                                                       TextColor="White"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalTextAlignment="Center" />
                                                <!-- Imagem avatar do usuário -->
                                                <Image Aspect="AspectFit"
                                                       Margin="-20">
                                                    <Image.Source>
                                                        <UriImageSource Uri="{Binding AvatarUI}"
                                                                        CachingEnabled="False"
                                                                        CacheValidity="1" />
                                                    </Image.Source>
                                                </Image>
                                            </Grid>
                                        </Frame>
                                        <StackLayout Grid.Row="1"
                                                     Grid.Column="1">
                                            <Label Text="Avatar"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="14"
                                                   TextColor="#8E8E8E" />
                                            <Label Text="Somente arquivos de imagem *.png, *.jpg e *.jpeg são aceitos.&#10;Para melhores resultados, use uma imagem quadrada (1:1)."
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="9"
                                                   TextColor="#8A8A8A"
                                                   Margin="0,10,0,15" />
                                            <!-- Button Adicionar Nova Imagem de Perfil Avatar-->
                                            <Button Text="Adicionar Imagem"
                                                    HorizontalOptions="Start"
                                                    BackgroundColor="{Binding BackgroundBtn.BackgroundColor}"
                                                    cursores:CursorBehavior.Cursor="Hand" 
                                                    />
                                        </StackLayout>
                                    </Grid>
                                </Frame>
                                <!-- Filho 2-->
                                <Grid Grid.Column="1"
                                      Margin="0,30,20,50"
                                      ColumnDefinitions="*,*"
                                      RowDefinitions="auto,*">

                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Text="Dados Pessoais"
                                           FontFamily="PoppinsSemiBold"
                                           FontSize="15"
                                           TextColor="White"
                                           Margin="0,0,0,20" />
                                    <!-- Button Atualizar Dados Pessoais -->
                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           ClassId="IconPessoal"
                                           Text="&#xe90f;"
                                           FontFamily="icons"
                                           FontSize="30"
                                           TextColor="#8E8E8E"
                                           HorizontalOptions="End"
                                           VerticalOptions="Start"
                                           cursores:CursorBehavior.Cursor="Hand">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="IconAtualizar_Tapped" />
                                        </Label.GestureRecognizers>
                                    </Label>

                                    <StackLayout Grid.Row="1"
                                                 Grid.ColumnSpan="3">
                                        <!-- Exibir nome do usuario -->
                                        <Label Text="Nome:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding NomeUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir E-mail do usuario -->
                                        <Label Text="E-Mail:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding EmailUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir Telefone -->
                                        <Label Text="Telefone:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding TelefoneUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir Setor do usuario -->
                                        <Label Text="Setor:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding SetorUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir Cargo do usuario -->
                                        <Label Text="Cargo:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding CargoUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir Senha do usuario -->
                                        <Label Text="Senha:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="********"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                    </StackLayout>
                                </Grid>
                            </Grid>
                        </Frame>

                        <!-- GERENCIAR PERFIL DA EMPRESA -->
                        <!-- Pai -->
                        <Frame x:Name="FrmEmpresa"
                               IsVisible="False"
                               BackgroundColor="#252525"
                               Padding="0"
                               BorderColor="Transparent"
                               CornerRadius="2"
                               Margin="0,10,0,0">
                            <!-- 2 Colunas -->
                            <Grid ColumnDefinitions="*,*"
                                  ColumnSpacing="20">
                                <!-- Filho 1 -->
                                <Frame Grid.Column="0"
                                       Padding="20"
                                       CornerRadius="2"
                                       Margin="10,10,0,10"
                                       BackgroundColor="#1F1F1F"
                                       BorderColor="Transparent">
                                    <Grid RowDefinitions="auto,auto,auto,auto,auto"
                                          ColumnDefinitions="*"
                                          RowSpacing="20"
                                          ColumnSpacing="20">
                                        <Label Grid.Row="0"
                                               Text="Gerenciar Perfil da Empresa"
                                               FontFamily="PoppinsSemiBold"
                                               FontSize="15"
                                               TextColor="White"
                                               VerticalTextAlignment="Start" />
                                        <StackLayout Grid.Row="1"
                                                     Orientation="Horizontal"
                                                     HorizontalOptions="Start">
                                            <Frame Padding="0"
                                                   CornerRadius="5"
                                                   HeightRequest="125"
                                                   WidthRequest="125"
                                                   BackgroundColor="#8E8E8E"
                                                   BorderColor="#8E8E8E"
                                                   IsClippedToBounds="True">
                                                <!-- Imagem do Logo menu lateral esquerdo -->
                                                <Image Source="{Binding LogoLateralUI}"
                                                       Aspect="AspectFill" />
                                            </Frame>
                                            <StackLayout Margin="20,0,0,0">
                                                <Label Text="Logo menu lateral esquerdo"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="14"
                                                       TextColor="#8E8E8E" />
                                                <Label Text="Somente arquivos de imagem *.png, *.jpg e *.jpeg são aceitos.&#10;Para melhores resultados, use uma imagem quadrada (1:1)."
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="9"
                                                       TextColor="#8A8A8A"
                                                       Margin="0,5,0,0" />
                                                <!-- Button escolher imagem da galeria -->
                                                <Label cursores:CursorBehavior.Cursor="Hand"
                                                       HorizontalOptions="Start"
                                                       Margin="0,10,0,10"
                                                       Style="{StaticResource LabelRelatorioStyle}"
                                                       Text="&#xe931; Escolher Imagem"
                                                       FontFamily="icons"
                                                       FontSize="12"
                                                       TextColor="#8A8A8A">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer />
                                                        <PointerGestureRecognizer PointerEntered="EscolherImagem_PointerEntered"
                                                                                  PointerExited="EscolherImagem_PointerExited" />
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <!-- Caminho arquivo imagens-->
                                                <Label Text="essaeumaimagem.png"
                                                       Style="{StaticResource LabelRelatorioStyle2}" />
                                            </StackLayout>
                                        </StackLayout>
                                        <StackLayout Grid.Row="2">
                                            <Frame Padding="0"
                                                   CornerRadius="5"
                                                   HeightRequest="100"
                                                   WidthRequest="300"
                                                   BackgroundColor="#8E8E8E"
                                                   BorderColor="#8E8E8E"
                                                   IsClippedToBounds="True"
                                                   HorizontalOptions="Start">
                                                <!-- Imagem do Logo menu superior -->
                                                <Image Source="{Binding LogoSuperiorUI}"
                                                       Aspect="AspectFit" 
                                                       VerticalOptions="Center"/>
                                            </Frame>
                                            <Label Text="Logo menu superior"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="14"
                                                   TextColor="#8E8E8E"
                                                   Margin="0,15,0,5" />
                                            <Label Text="Somente arquivos de imagem *.png, *.jpg e *.jpeg são aceitos.&#10;Para melhores resultados, use uma imagem (3:1)."
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="9"
                                                   TextColor="#8A8A8A"/>
                                            <!-- Button escolher imagem da galeria -->
                                            <Label cursores:CursorBehavior.Cursor="Hand"
                                                   HorizontalOptions="Start"
                                                   Margin="0,10,0,10"
                                                   Style="{StaticResource LabelRelatorioStyle}"
                                                   Text="&#xe931; Escolher Imagem"
                                                   FontFamily="icons"
                                                   FontSize="12"
                                                   TextColor="#8A8A8A">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer />
                                                    <PointerGestureRecognizer PointerEntered="EscolherImagem_PointerEntered"
                                                                              PointerExited="EscolherImagem_PointerExited" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                            <!-- Caminho arquivo imagens-->
                                            <Label Text="essaeumaimagem.png"
                                                   Style="{StaticResource LabelRelatorioStyle2}" />
                                        </StackLayout>

                                        <StackLayout Grid.Row="3">
                                            <!-- Button salvar novos logos -->
                                            <Button Text="Salvar Imagens"
                                                    HorizontalOptions="Start"
                                                    BackgroundColor="{Binding BackgroundBtn.BackgroundColor}"
                                                    cursores:CursorBehavior.Cursor="Hand" />
                                        </StackLayout>
                                        <StackLayout Grid.Row="4"
                                                     Margin="0,10,0,20"
                                                     VerticalOptions="Start">
                                            <Label Text="Definir cor padrão para o tema dos Botões"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="14"
                                                   TextColor="#8E8E8E" />
                                            <Label Text="Insira o código hexadecimal da cor contendo até&#10;6 dígitos, por exemplo: #000000"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="9"
                                                   TextColor="#8A8A8A"
                                                   Margin="0,10,0,20" />
                                            <!-- Entrada da cor hexadecimal -->
                                            <Entry Placeholder="000000"
                                                   BackgroundColor="#252525"
                                                   WidthRequest="100"
                                                   MaxLength="6"
                                                   FontSize="14"
                                                   Margin="0,0,20,0"
                                                   x:Name="EtyCorTema"
                                                   HorizontalOptions="Start"
                                                   VerticalOptions="Start" />
                                            <StackLayout Orientation="Horizontal"
                                                         VerticalOptions="Start"
                                                         Margin="0,20,0,0">
                                                <!-- Button Salvar Alteração na Cor do tema dos Buttons-->
                                                <Button Text="Salvar Cor"
                                                        HorizontalOptions="Start"
                                                        HeightRequest="32"
                                                        BackgroundColor="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ConfiguracaoViewModel}}, Path=BackgroundBtn.BackgroundColor}"
                                                        cursores:CursorBehavior.Cursor="Hand"
                                                        BindingContext="{x:Reference EtyCorTema}"
                                                        CommandParameter="{Binding Text}"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ConfiguracaoViewModel}}, Path=Btn_NovaCorTemaButtons}" />
                                                <!-- Button redefinir cor do tema dos buttons ao padrão -->
                                                <Button Text="Cor Padrão"
                                                        FontFamily="PoppinsRegular"
                                                        HorizontalOptions="Start"
                                                        HeightRequest="32"
                                                        BackgroundColor="Transparent"
                                                        cursores:CursorBehavior.Cursor="Hand"
                                                        BorderColor="#8E8E8E"
                                                        BorderWidth="1"
                                                        Margin="5,0,0,0"
                                                        Command="{Binding Btn_RedefinirCorPadrao}" />
                                            </StackLayout>
                                        </StackLayout>
                                    </Grid>
                                </Frame>

                                <!-- Filho 2-->
                                <Grid Grid.Column="1"
                                      Margin="0,30,20,50"
                                      ColumnDefinitions="*,*"
                                      RowDefinitions="auto,*">
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Text="Dados da Empresa"
                                           FontFamily="PoppinsSemiBold"
                                           FontSize="15"
                                           TextColor="White"
                                           Margin="0,0,0,20" />
                                    <!-- Button Editar Dados da Empresa -->
                                    <Label Grid.Row="0"
                                           Grid.Column="1"
                                           ClassId="IconEmpresa"
                                           Text="&#xe90f;"
                                           FontFamily="icons"
                                           FontSize="30"
                                           TextColor="#8E8E8E"
                                           HorizontalOptions="End"
                                           VerticalOptions="Start"
                                           cursores:CursorBehavior.Cursor="Hand">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="IconAtualizar_Tapped" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                    <StackLayout Grid.Row="1"
                                                 Grid.ColumnSpan="3">
                                        <!-- Exibir nome da Empresa -->
                                        <Label Text="Empresa:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding EmpresaUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir CNPJ -->
                                        <Label Text="CNPJ:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding CnpjUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir Unidade -->
                                        <Label Text="Unidade:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding UnidadeUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir Responsável -->
                                        <Label Text="Responsável:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding ResponsavelUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <!-- Exibir E-Mail -->
                                        <Label Text="E-Mail:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding EmailEmpresaUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <StackLayout>
                                            <!-- Exibir Telefone -->
                                            <Label Text="Telefone:"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="14"
                                                   TextColor="#8E8E8E" />
                                            <Label Text="{Binding TelefoneEmpresaUI}"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="13"
                                                   TextColor="White"
                                                   Margin="0,0,0,5" />
                                        </StackLayout>
                                        <!-- Exibir Logradouro -->
                                        <Label Text="Longradouro:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding LongradouroEmpresaUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <Grid ColumnDefinitions="*,*">
                                            <StackLayout Grid.Column="0">
                                                <!-- Exibir Numero -->
                                                <Label Text="Numero:"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="14"
                                                       TextColor="#8E8E8E" />
                                                <Label Text="{Binding NumeroEmpresaUI}"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="13"
                                                       TextColor="White"
                                                       Margin="0,0,0,5" />
                                            </StackLayout>
                                            <StackLayout Grid.Column="1">
                                                <!-- Exibir CEP -->
                                                <Label Text="CEP:"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="14"
                                                       TextColor="#8E8E8E" />
                                                <Label Text="{Binding CepEmpresaUI}"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="13"
                                                       TextColor="White"
                                                       Margin="0,0,0,5" />
                                            </StackLayout>
                                        </Grid>
                                        <!-- Exibir Bairro -->
                                        <Label Text="Bairro:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding BairroEmpresaUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                        <Grid ColumnDefinitions="*,*">
                                            <StackLayout Grid.Column="0">
                                                <!-- Exibir Cidade -->
                                                <Label Text="Cidade:"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="14"
                                                       TextColor="#8E8E8E" />
                                                <Label Text="{Binding CidadeEmpresaUI}"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="13"
                                                       TextColor="White"
                                                       Margin="0,0,0,5" />
                                            </StackLayout>
                                            <StackLayout Grid.Column="1">
                                                <!-- Exibir Estado -->
                                                <Label Text="Estado:"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="14"
                                                       TextColor="#8E8E8E" />
                                                <Label Text="{Binding EstadoEmpresaUI}"
                                                       FontFamily="PoppinsRegular"
                                                       FontSize="13"
                                                       TextColor="White"
                                                       Margin="0,0,0,5" />
                                            </StackLayout>
                                        </Grid>
                                        <!-- Exibir Complemento -->
                                        <Label Text="Complemento:"
                                               FontFamily="PoppinsRegular"
                                               FontSize="14"
                                               TextColor="#8E8E8E" />
                                        <Label Text="{Binding ComplementoEmpresaUI}"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White"
                                               Margin="0,0,0,5" />
                                    </StackLayout>
                                </Grid>
                            </Grid>
                        </Frame>

                        <!-- GERENCIAR NOTIFICAÇÕES -->
                        <!-- Pai -->
                        <Frame x:Name="FrmNotificacao"
                               IsVisible="False"
                               BackgroundColor="#252525"
                               Padding="0"
                               BorderColor="Transparent"
                               CornerRadius="2"
                               Margin="0,10,0,0">
                            <!-- 2 Colunas -->
                            <Grid ColumnDefinitions="*,*,*"
                                  RowDefinitions="auto,auto,*"
                                  ColumnSpacing="20"
                                  RowSpacing=" 20"
                                  Margin="20">
                                <!-- Filho 1 -->
                                <StackLayout Grid.Row="0"
                                             Grid.ColumnSpan="4">
                                    <Label Text="Gerenciar Notificações por E-Mail"
                                           FontFamily="PoppinsSemiBold"
                                           FontSize="15"
                                           Margin="0,0,0,20"
                                           TextColor="White"
                                           VerticalTextAlignment="Start" />

                                    <Label Text="Você pode incluir até 3 endereços de e-mail adicionais para ser avisado com antecedência sobre o&#10;vencimento das próximas inspeções, atualizações de status e outras informações relacionadas à NR-13 da sua Unidade."
                                           FontFamily="PoppinsRegular"
                                           FontSize="11"
                                           TextColor="#8A8A8A" />
                                </StackLayout>
                                <StackLayout Grid.Row="1"
                                             Grid.Column="0">
                                    <Label Text="1º E-mail*"
                                           FontSize="12"
                                           TextTransform="Uppercase"
                                           FontFamily="PoppinsRegular"
                                           TextColor="White"
                                           Margin="0,0,0,5" />
                                    <!-- Entrada do Primeiro E-mail -->
                                    <Entry Text="{Binding EmailAdicional_1}"
                                           Keyboard="Email"
                                           Placeholder="Insira o 1º endereço de E-mail aqui"
                                           MaxLength="200"
