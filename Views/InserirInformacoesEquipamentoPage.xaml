<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cronos.Views.InserirInformacoesEquipamentoPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:contentview="clr-namespace:Cronos.ContentViews"
             xmlns:viewmodels="clr-namespace:Cronos.ViewModels"
             xmlns:services="clr-namespace:Cronos.Services"
             xmlns:wds="clr-namespace:Cronos.Platforms.Windows">

    <ContentPage.BindingContext>
        <viewmodels:InserirInformacaoEqViewModel />
    </ContentPage.BindingContext>
    <Frame Padding="0"
           CornerRadius="0"
           BackgroundColor="Transparent"
           BorderColor="#4B4B4B">
        <Grid ColumnDefinitions="*"
              RowDefinitions="auto,*"
              ColumnSpacing="20"
              RowSpacing="0">
            <!-- MENU SUPERIOR -->
            <ContentView Grid.Row="0">
                <contentview:MenuTopContentView />
            </ContentView>
            <Grid Grid.Row="1">
                <!-- CONTEÚDO-->
                <ScrollView>
                    <StackLayout Margin="20">
                        <Label Text="Registrar Informações Sobre o Equipamento"
                               FontSize="18"
                               FontFamily="PoppinsSemiBold"
                               TextColor="White"
                               HorizontalTextAlignment="Start"
                               SemanticProperties.HeadingLevel="Level1" />
                        <Label Text="Registrar Informações Sobre o Equipamento "
                               FontSize="9"
                               TextColor="#8A8A8A"
                               FontFamily="PoppinsLight"
                               HorizontalTextAlignment="Start" />

                        <Frame BackgroundColor="#252525"
                               Padding="0"
                               BorderColor="Transparent"
                               CornerRadius="2"
                               Margin="0,10,0,0">
                            <StackLayout Margin="20">
                                <Grid ColumnDefinitions="*,*,*,*"
                                      RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
                                      ColumnSpacing="20"
                                      RowSpacing="20">

                                    <Label Grid.Row="0"
                                           Grid.ColumnSpan="3"
                                           Text="TIPO DE EDIÇÃO"
                                           FontFamily="PoppinsRegular"
                                           FontSize="13"
                                           TextColor="White"
                                           Margin="0,10,0,0" />
                                    <!-- Radio Buttons tipo de edição -->
                                    <StackLayout Grid.Row="1"
                                                 Grid.ColumnSpan="4"
                                                 Orientation="Horizontal"
                                                 HorizontalOptions="Start"
                                                 RadioButtonGroup.GroupName="GrpTipoEdicao">
                                        <RadioButton Content="INSERIR INFORMAÇÕES"
                                                     FontFamily="PoppinsRegular"
                                                     FontSize="12"
                                                     TextColor="White"
                                                     IsChecked="{Binding RadioTipoEdicao}"
                                                     VerticalOptions="Center"
                                                     HorizontalOptions="Start"
                                                     wds:CursorBehavior.Cursor="Hand"
                                                     ToolTipProperties.Text="Insira novas informações&#10;em um equipamento&#10;existente no site."
                                                     GroupName="GrpTipoEdicao"
                                                     Margin="-5,0,20,0">
                                            <RadioButton.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Btn_TipoEdicao}"
                                                                      CommandParameter="InserirInformacoes" />
                                            </RadioButton.GestureRecognizers>
                                        </RadioButton>
                                        <RadioButton Content="CADASTRAR NOVO EQUIPAMENTO"
                                                     FontFamily="PoppinsRegular"
                                                     FontSize="12"
                                                     TextColor="White"
                                                     VerticalOptions="Center"
                                                     HorizontalOptions="Start"
                                                     wds:CursorBehavior.Cursor="Hand"
                                                     ToolTipProperties.Text="Cadastre um novo&#10;equipamento&#10;no site."
                                                     GroupName="GrpTipoEdicao">
                                            <RadioButton.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Btn_TipoEdicao}"
                                                                      CommandParameter="CadastrarEquipamento" />
                                            </RadioButton.GestureRecognizers>
                                        </RadioButton>
                                    </StackLayout>
                                    <Label Grid.Row="2"
                                           Grid.ColumnSpan="4"
                                           Text="LOCAL"
                                           FontFamily="PoppinsRegular"
                                           FontSize="13"
                                           TextColor="White" />
                                    <Grid Grid.Row="3"
                                          Grid.ColumnSpan="4"
                                          ColumnSpacing="20"
                                          ColumnDefinitions="*,*,*,*,*">
                                        <StackLayout Grid.Row="0"
                                                     Grid.ColumnSpan="2">
                                            <Label Text="NOME DA EMPRESA"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="12"
                                                   TextColor="#8A8A8A"
                                                   Margin="0,0,0,5" />
                                            <Frame Grid.Column="0"
                                                   Padding="10,7,10,7"
                                                   CornerRadius="3"
                                                   HeightRequest="37"
                                                   BorderColor="#8A8A8A"
                                                   BackgroundColor="#1F1F1F">
                                                <!-- Nome da Empresa atual aqui -->
                                                <Label FontSize="12"
                                                       TextColor="White"
                                                       HeightRequest="20"
                                                       FontFamily="PoppinsRegular"
                                                       Text="{Binding NomeEmpresaUI}" />
                                            </Frame>
                                        </StackLayout>
                                        <StackLayout Grid.Row="0"
                                                     Grid.Column="2"
                                                     Grid.ColumnSpan="3">
                                            <Grid ColumnDefinitions="*,*"
                                                  ColumnSpacing="20">
                                                <StackLayout Grid.Column="0">
                                                    <Label Text="NOME DA UNIDADE"
                                                           FontFamily="PoppinsRegular"
                                                           FontSize="12"
                                                           TextColor="#8A8A8A"
                                                           Margin="0,0,0,5" />
                                                    <Frame Padding="10,7,10,7"
                                                           CornerRadius="3"
                                                           HeightRequest="37"
                                                           BorderColor="#8A8A8A"
                                                           BackgroundColor="#1F1F1F">
                                                        <!-- Nome da Unidade atual aqui -->
                                                        <Label FontSize="12"
                                                               TextColor="White"
                                                               HeightRequest="20"
                                                               FontFamily="PoppinsRegular"
                                                               Text="{Binding NomeUnidadeUI}" />
                                                    </Frame>
                                                </StackLayout>
                                                <StackLayout Grid.Column="1">
                                                    <Grid ColumnDefinitions="*,70">
                                                        <Label Grid.Column="0"
                                                               Text="NOME DO SETOR"
                                                               FontFamily="PoppinsRegular"
                                                               FontSize="12"
                                                               TextColor="#8A8A8A"
                                                               Margin="0,0,0,5" />
                                                        <!-- Button Criar novo Setor -->
                                                        <Label Grid.Column="1"
                                                               Text="Mudar"
                                                               FontFamily="PoppinsRegular"
                                                               FontSize="12"
                                                               Margin="0,0,5,0"
                                                               TextColor="White"
                                                               HorizontalOptions="End"
                                                               wds:CursorBehavior.Cursor="Hand">
                                                            <Label.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding Btn_NavegarParaConfiguracaoEmpresa}" />
                                                            </Label.GestureRecognizers>
                                                        </Label>
                                                    </Grid>
                                                    <Frame Padding="10,7,10,7"
                                                           CornerRadius="3"
                                                           HeightRequest="37"
                                                           BorderColor="#8A8A8A"
                                                           BackgroundColor="#1F1F1F">
                                                        <!-- Nome do setor atual aqui -->
                                                        <Label FontSize="12"
                                                               TextColor="White"
                                                               HeightRequest="20"
                                                               FontFamily="PoppinsRegular"
                                                               Text="{Binding NomeSetorUI}" />
                                                    </Frame>
                                                </StackLayout>
                                            </Grid>
                                        </StackLayout>
                                    </Grid>

                                    <Label Grid.Row="4"
                                           Grid.ColumnSpan="4"
                                           Text="IDENTIFICAÇÃO"
                                           FontFamily="PoppinsRegular"
                                           FontSize="13"
                                           TextColor="White" />
                                    <StackLayout Grid.Row="5"
                                                 Grid.Column="0">
                                        <Label Text="TAG*"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada da TAG de identificação do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="200"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Tag}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="5"
                                                 Grid.Column="1">
                                        <Label Text="SERVIÇO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada do Serviço no equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="100"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Servico}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="5"
                                                 Grid.Column="2"
                                                 IsVisible="{Binding MostrarTodosCampos}">
                                        <Label Text="LOCALIZAÇÃO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada da Localização do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="100"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Localizacao}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="5"
                                                 Grid.Column="3"
                                                 IsVisible="{Binding MostrarTodosCampos}">
                                        <Label Text="NÚMERO DE FABRICAÇÃO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada do Número de fabricação do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Numero_Fabricacao}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="6"
                                                 Grid.ColumnSpan="4"
                                                 IsVisible="{Binding MostrarTodosCampos}">
                                        <Label Text="SITUAÇÃO DO EQUIPAMENTO*"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White" />
                                        <Label Text="Qual das seguintes situações melhor descreve esse equipamento"
                                               FontFamily="PoppinsRegular"
                                               FontSize="11"
                                               TextColor="#8A8A8A" />
                                        <!-- Radio Buttons situação do equipamento -->
                                        <StackLayout Orientation="Horizontal"
                                                     HorizontalOptions="Start"
                                                     Margin="0,20,0,0"
                                                     RadioButtonGroup.GroupName="GrpSituacaoEq">
                                            <!-- Equipamento Ativo -->
                                            <RadioButton Content="ATIVO"
                                                         IsChecked="{Binding RadioSituacao}"
                                                         FontFamily="PoppinsRegular"
                                                         FontSize="12"
                                                         TextColor="White"
                                                         VerticalOptions="Center"
                                                         HorizontalOptions="Start"
                                                         wds:CursorBehavior.Cursor="Hand"
                                                         GroupName="GrpSituacaoEq">
                                                <RadioButton.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Btn_Status_Equipamento}"
                                                                          CommandParameter="ATIVO" />
                                                </RadioButton.GestureRecognizers>
                                            </RadioButton>
                                            <!-- Equipamento Desativado -->
                                            <RadioButton Content="FORA DE OPERAÇÃO"
                                                         FontFamily="PoppinsRegular"
                                                         FontSize="12"
                                                         TextColor="White"
                                                         Margin="20,0,20,0"
                                                         VerticalOptions="Center"
                                                         HorizontalOptions="Start"
                                                         wds:CursorBehavior.Cursor="Hand"
                                                         GroupName="GrpSituacaoEq">
                                                <RadioButton.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Btn_Status_Equipamento}"
                                                                          CommandParameter="FORA DE OPERAÇÃO" />
                                                </RadioButton.GestureRecognizers>
                                            </RadioButton>
                                            <!-- Equipamento Nr-13 não obrigatório -->
                                            <RadioButton Content="NR-13 NÃO OBRIGATÓRIO"
                                                         FontFamily="PoppinsRegular"
                                                         FontSize="12"
                                                         TextColor="White"
                                                         VerticalOptions="Center"
                                                         HorizontalOptions="Start"
                                                         wds:CursorBehavior.Cursor="Hand"
                                                         GroupName="GrpSituacaoEq">
                                                <RadioButton.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Btn_Status_Equipamento}"
                                                                          CommandParameter="NR-13 NÃO OBRIGATÓRIO" />
                                                </RadioButton.GestureRecognizers>
                                            </RadioButton>
                                        </StackLayout>
                                    </StackLayout>

                                    <Label Grid.Row="7"
                                           Grid.ColumnSpan="4"
                                           Text="PROJETO"
                                           FontFamily="PoppinsRegular"
                                           FontSize="13"
                                           TextColor="White" />
                                    <StackLayout Grid.Row="8"
                                                 Grid.Column="0">
                                        <Label Text="VOLUME (m³)"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada do VOLUME (m³) do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Volume}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="8"
                                                 Grid.Column="1">
                                        <Label Text="PMTA"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada do PMTA do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding PMTA}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="8"
                                                 Grid.Column="2">
                                        <Label Text="PRESSÃO TESTE HIDROSÁTICO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada da PRESSÃO TESTE HIDROSÁTICO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Pressao_Teste_Hidrosatico}" />
                                    </StackLayout>

                                    <Label Grid.Row="9"
                                           Grid.ColumnSpan="4"
                                           Text="OPERAÇÃO"
                                           FontFamily="PoppinsRegular"
                                           FontSize="13"
                                           TextColor="White" />
                                    <StackLayout Grid.Row="10"
                                                 Grid.Column="0">
                                        <Label Text="FLUIDO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada do FLUIDO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Fluido}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="10"
                                                 Grid.Column="1">
                                        <Label Text="PRESSÃO MÁXIMA"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada da PRESSÃO MÁXIMA do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Pressao_Maxima}" />
                                    </StackLayout>

                                    <StackLayout Grid.Row="11"
                                                 Grid.ColumnSpan="4">
                                        <Label Text="Instrumentos de Segurança"
                                               FontFamily="PoppinsSemiBold"
                                               FontSize="15"
                                               TextColor="White"
                                               Margin="0,20,0,20" />
                                        <Label Text="INDICADOR(ES) DE PRESSÃO ASSOCIADO(S)"
                                               FontFamily="PoppinsRegular"
                                               FontSize="13"
                                               TextColor="White" />
                                    </StackLayout>

                                    <StackLayout Grid.Row="12"
                                                 Grid.Column="0">
                                        <Label Text="TAG DE IDENTIFICAÇÃO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada da TAG DE IDENTIFICAÇÃO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Identificacao_Tag_Pressao}" />
                                    </StackLayout>

                                    <StackLayout Grid.Row="12"
                                                 Grid.Column="1">
                                        <Label Text="NÚMERO CERTIFICADO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada do NÚMERO CERTIFICADO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Numero_Certificado_Pressao}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="12"
                                                 Grid.Column="2">
                                        <Label Text="ÚLTIMA CALIBRAÇÃO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada da ÚLTIMA CALIBRAÇÃO do equipamento -->
                                        <Frame Padding="0"
                                               CornerRadius="4"
                                               HeightRequest="37"
                                               BackgroundColor="#1F1F1F"
                                               HorizontalOptions="Start"
                                               BorderColor="Transparent">
                                            <DatePicker Date="{Binding Ultima_Calibracao_Pressao, Mode=TwoWay}"
                                                        Format="dd/MM/yyyy"
                                                        FontSize="12"
                                                        WidthRequest="150"
                                                        TextColor="White"
                                                        FontFamily="PoppinsLigth"
                                                        VerticalOptions="Center"
                                                        wds:CursorBehavior.Cursor="Hand" />
                                        </Frame>
                                    </StackLayout>
                                    <Label Grid.Row="13"
                                           Grid.ColumnSpan="4"
                                           Text="VÁLVULA(S) DE SEGURANÇA / ALÍVIO"
                                           FontFamily="PoppinsRegular"
                                           FontSize="13"
                                           TextColor="White" />
                                    <StackLayout Grid.Row="14"
                                                 Grid.Column="0">
                                        <Label Text="TAG DE IDENTIFICAÇÃO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada VÁLVULA(S) DE SEGURANÇA / ALÍVIO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Identificacao_Tag_Valvula}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="14"
                                                 Grid.Column="1">
                                        <Label Text="PRESSÃO ABERTURA"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada DE PRESSÃO ABERTURA do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Pressao_Abertura}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="14"
                                                 Grid.Column="2">
                                        <Label Text="BITOLA (Ø)"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada DE BITOLA (Ø) do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Bitola}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="14"
                                                 Grid.Column="3">
                                        <Label Text="DCBI"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada DE DCBI do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding DCBI}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="15"
                                                 Grid.Column="0">
                                        <Label Text="NÚMERO CERTIFICADO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada NÚMERO CERTIFICADO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Numero_Certificado_Valvula}" />
                                    </StackLayout>
                                    <Grid Grid.Row="15"
                                          Grid.Column="1"
                                          Grid.ColumnSpan="3"
                                          ColumnSpacing="18"
                                          ColumnDefinitions="auto,auto">
                                        <StackLayout Grid.Column="0">
                                            <Label Text="ÚLTIMA CALIBRAÇÃO"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="12"
                                                   TextColor="#8A8A8A"
                                                   Margin="0,0,0,5" />
                                            <!-- Entrada da ÚLTIMA CALIBRAÇÃO do equipamento -->
                                            <Frame Padding="0"
                                                   CornerRadius="4"
                                                   HeightRequest="37"
                                                   BackgroundColor="#1F1F1F"
                                                   HorizontalOptions="Start"
                                                   BorderColor="Transparent">
                                                <DatePicker Date="{Binding Ultima_Calibracao_Valvula, Mode=TwoWay}"
                                                            Format="dd/MM/yyyy"
                                                            FontSize="12"
                                                            WidthRequest="150"
                                                            TextColor="White"
                                                            FontFamily="PoppinsLigth"
                                                            VerticalOptions="Center"
                                                            wds:CursorBehavior.Cursor="Hand" />
                                            </Frame>
                                        </StackLayout>
                                        <StackLayout Grid.Column="1">
                                            <Label Text="PRÓXIMA CALIBRAÇÃO"
                                                   FontFamily="PoppinsRegular"
                                                   FontSize="12"
                                                   TextColor="#8A8A8A"
                                                   Margin="0,0,0,5" />
                                            <!-- Entrada da ÚLTIMA CALIBRAÇÃO do equipamento -->
                                            <Frame Padding="0"
                                                   CornerRadius="4"
                                                   HeightRequest="37"
                                                   BackgroundColor="#1F1F1F"
                                                   HorizontalOptions="Start"
                                                   BorderColor="Transparent">
                                                <DatePicker Date="{Binding Proxima_Calibracao_Valvula, Mode=TwoWay}"
                                                            Format="dd/MM/yyyy"
                                                            FontSize="12"
                                                            WidthRequest="150"
                                                            TextColor="White"
                                                            FontFamily="PoppinsLigth"
                                                            VerticalOptions="Center"
                                                            wds:CursorBehavior.Cursor="Hand" />
                                            </Frame>
                                        </StackLayout>
                                    </Grid>

                                    <Label Grid.Row="16"
                                           Grid.ColumnSpan="4"
                                           Text="MANÔMETROS"
                                           FontFamily="PoppinsRegular"
                                           FontSize="13"
                                           TextColor="White" />
                                    <StackLayout Grid.Row="17"
                                                 Grid.Column="0">
                                        <Label Text="TAG DE IDENTIFICAÇÃO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada VÁLVULA(S) DE SEGURANÇA / ALÍVIO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Identificacao_Tag_Manometro}" />
                                    </StackLayout>
                                    <StackLayout Grid.Row="17"
                                                 Grid.Column="1">
                                        <Label Text="MÁXIMA PRESSÃO"
                                               FontFamily="PoppinsRegular"
                                               FontSize="12"
                                               TextColor="#8A8A8A"
                                               Margin="0,0,0,5" />
                                        <!-- Entrada DE MÁXIMA PRESSÃO do equipamento -->
                                        <Entry TextColor="White"
                                               MaxLength="50"
                                               Keyboard="Text"
                                               BackgroundColor="#1F1F1F"
                                               Margin="0"
                                               Text="{Binding Faixa_Pressao_Maxima_Manometro}" />
                                    </StackLayout>
