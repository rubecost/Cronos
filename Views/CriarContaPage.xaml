            <ContentView Grid.Row="0">
                <contentview:MenuTopContentView />
            </ContentView>

            <Grid Grid.Row="1">
                <!-- CONTEÃšDO-->
                <ScrollView >
                    <StackLayout Margin="20">
                        <Label Text="Criar conta"
                               FontSize="18"
                               FontFamily="PoppinsSemiBold"
                               TextColor="White"
                               HorizontalTextAlignment="Start"
                               SemanticProperties.HeadingLevel="Level1" />
                        <Label Text="Criar conta "
                               FontSize="9"
